                    { name: "عروسک گدازه (Lava Doll)", imageUrl: "https://placehold.co/150x100/808080/FFFFFF?text=Lava+Doll" },
                    { name: "گردنبند گل (لی)", imageUrl: "https://placehold.co/150x100/FFC0CB/FFFFFF?text=Lei" }
                ],
                imageUrl: "https://placehold.co/400x250/808080/FFFFFF?text=Hawaii"
            }
        ];

        // You will need to modify the JavaScript code within your <script> tags
        // that is responsible for rendering the "countries" section.
        // Look for the section that targets '#country-grid'.

        // Example of how to render the countries:
        // (You should replace your existing country rendering logic with something similar)
        const countryGrid = document.getElementById('country-grid');
        if (countryGrid) {
            countryGrid.innerHTML = ''; // Clear existing content

            countriesData.forEach(country => {
                const countryCard = document.createElement('div');
                countryCard.className = 'bg-gray-50 p-4 rounded-lg shadow-md flex flex-col items-center text-center';
                countryCard.innerHTML = `
                    <img src="${country.imageUrl}" alt="${country.name}" class="w-full h-40 object-cover rounded-md mb-4">
                    <h3 class="text-xl font-semibold text-[#34658F] mb-2">${country.name}</h3>
                    <p class="text-gray-600 text-sm mb-3">${country.description}</p>
                    <div class="mt-auto">
                        <h4 class="text-md font-medium text-gray-700 mb-2">سوغاتی‌های محبوب:</h4>
                        <ul class="list-disc list-inside text-gray-600 text-sm">
                            ${country.popularSouvenirs.map(s => `
                                <li class="flex items-center justify-center gap-2">
                                    <img src="${s.imageUrl}" alt="${s.name}" class="w-8 h-8 rounded-full object-cover">
                                    <span>${s.name}</span>
                                </li>
                            `).join('')}
                        </ul>
                    </div>
                `;
                countryGrid.appendChild(countryCard);
            });
        }
